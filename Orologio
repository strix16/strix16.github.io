<!doctype html>
<html lang="it">
    <head>
        <meta charset= "utf-8">
        <meta name="viewpart" content="width=device-width, initial-scale=1">
        <title>Orologio</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.1.9/p5.js"></script>

          <script>
            function setup() {
              createCanvas(1000, 1000);
              angleMode(DEGREES);
            }

            function draw() {
              background('gray');
              var h = new Date().getHours();
              var m = new Date().getMinutes();
              var s = new Date().getSeconds();
              text(h,30,90),
              text(m,60,90);
              text(s,90,90);

              fill(255,255,255);
        circle(450,450,150);

        fill(255,0,0);
        arc(450,450,150,150,(s*6)-90,(s*6)-89);

        fill(0,255,0);
        arc(450,450,150,150,(m*6)-90,(m*6)-89);

        fill(0,0,255);
        arc(450,450,150,150,(h*30)-90,(h*30)-89);
      }
            </script>
          </head>
          <body>
  <h1> Clock </h1>
         </body>
     </html>
